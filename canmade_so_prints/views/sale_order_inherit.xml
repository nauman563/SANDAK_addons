<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_sale_order_form_inherited" model="ir.ui.view">
            <field name="name">sale.order.form.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="customer_po" string="Customer PO"/>
                    <field name="fob"/>
                    <field name="cancel_date"/>

                </xpath>
                <xpath expr="//header" position="inside">
                    <button name="print_sales_order_report" type="object" string="Print"
                            class="btn-primary" icon="fa-print"/>
                </xpath>
                <xpath expr="//field[@name='order_line']/list/field[@name='tax_id']" position="after">
                    <field name="shipping_tax"/>
                    <field name="shipping_term" />
                    <field name="carrier" />
                    <field name="display_price" />
                    <field name="shipping_date" />
                </xpath>
            </field>
        </record>


        <record id="choose_delivery_carrier_form_inherited" model="ir.ui.view">
            <field name="name">choose.delivery.carrier.form.inherit</field>
            <field name="model">choose.delivery.carrier</field>
            <field name="inherit_id" ref="delivery.choose_delivery_carrier_view_form"/>
            <field name="arch" type="xml">
                <group>
                    <xpath expr="//group/group" position="after">
                        <group>
                            <field name="shipping_term"/>
                            <field name="carrier"/>
                            <field name="shipping_date"/>
                        </group>
                    </xpath>
                </group>
            </field>
        </record>
        <!--        <record id="view_order_form_inherit_shipping_tax" model="ir.ui.view">-->
        <!--            <field name="name">sale.order.line.form.inherit.shipping.tax</field>-->
        <!--            <field name="model">sale.order</field>-->
        <!--            <field name="inherit_id" ref="sale.view_order_form"/>-->
        <!--            <field name="arch" type="xml">-->
        <!--                -->
        <!--            </field>-->
        <!--        </record>-->


    </data>
</odoo>