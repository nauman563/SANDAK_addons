<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_purchase_order_form_inherited" model="ir.ui.view">
            <field name="name">purchase.order.form.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="customer_po" string="Customer PO"/>
                    <field name="shipping_method"/>
                    <field name="shipping_term"/>
                    <field name="shipping"/>
                </xpath>
                  <xpath expr="//field[@name='partner_ref']" position="after">
                    <field name="vendor_msg" placeholder="Enter additional details (SPECIAL NOTE)..."/>
                    <field name="carrier" />
                    <field name="fob" />
                </xpath>
                <!--                 <xpath expr="//header" position="inside">-->
                <!--                    <button name="print_purchase_order_report" type="object" string="Bill"-->
                <!--                            class="btn-primary" icon="fa-print"/>-->
                <!--                </xpath>-->
                <xpath expr="//header" position="inside">
                    <button name="purchase_order_report" type="object" string="Print"
                            class="btn-primary" icon="fa-print"/>
                    <button name="print_purchase_order_report" type="object" string="Bill"
                            class="btn-primary" icon="fa-print"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>