<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_account_move_form_inherited" model="ir.ui.view">
            <field name="name">account.move.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <!--<xpath expr="//field[@name='invoice_line']/tree/field[@name='product_id']" position="after">
                    <field name="shipping_term" />
                    <field name="carrier" />
                    <field name="display_price" />
                </xpath>-->
                <xpath expr="//field[@name='invoice_date']" position="after">
                    <field name="customer_po" string="Customer PO"/>
                </xpath>
                <xpath expr="//header" position="inside">
                    <button name="print_invoice_report" type="object" string="Print"
                            class="btn-primary" icon="fa-print"/>
                </xpath>
                <field name="price_unit" column_invisible="parent.state != 'posted'"/>


                <xpath expr="//field[@name='price_unit']" position="attributes">
                    <attribute name="attrs">
                        {'column_invisible': [('parent.state', '!=', 'posted')]}
                    </attribute>
                </xpath>
            </field>
        </record>


    </data>
</odoo>