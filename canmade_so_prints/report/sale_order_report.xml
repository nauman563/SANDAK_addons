<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="canmade_sale_order_report_temp">
            <t t-call="web.html_container">
                <t t-call="web.basic_layout">
                    <style>

                        .custom-border-tr td, .custom-border-tr th {
                        border: 1px solid black; /* 1px black border for td and th within tr */
                        }

                        .custom-border-td {
                        border: 1px solid black; /* 1px black border for individual td */
                        }
                        /* Add font size rule */
                        body {
                        font-size: 10pt;
                        }
                    </style>
                    <main>
                        <t t-foreach="docs" t-as="o">

                            <div class="page" style="font-family: 'Times New Roman', Times, serif; color: #333;">

                                <!-- Company Logo and Address -->
                                <div class="header">
                                    <!-- Date and Time -->
                                    <div class="row">
                                        <div class="col-4 text-left" style="font-size: small;">
                                            <span t-esc="datetime.datetime.now().strftime('%d-%m-%Y %I:%M:%S %p')"/>
                                        </div>
                                        <div class="col-4 text-center" style="font-size: small;">
<!--                                            <span>Printed By:-->
<!--                                                <span t-esc="request.env.user.name"/>-->
<!--                                            </span>-->
                                        </div>
                                        <div class="col-4" style="position: relative;">
                                            <small style="position: absolute; right: 0; top: 0; font-size: small;">
                                                <span>Page</span>
                                                <span class="page"/>
                                                of
                                                <span class="topage"/>
                                            </small>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-2">
                                            <strong>
                                                <img t-if="o.company_id.logo"
                                                     t-att-src="image_data_uri(o.company_id.logo)"
                                                     style="max-height: 80px; max-width: 80%; margin-top: 15px;"
                                                     alt="Logo"/>
                                            </strong>
                                        </div>
                                        <div class="col-4 text-left"
                                             style="font-size: small;padding-left: 0; margin-left: 0; margin-right: 0;margin-top: 15px;margin-bottom: 0;">
                                            <strong t-field="o.company_id.name"/>
                                            <div>
                                                <p t-field="o.company_id.partner_id.contact_address"
                                                   style="margin: 0;"/>
                                            </div>
                                            <div>
                                                <p t-if="o.company_id.phone" style="margin: 0;">Phone:
                                                    <span t-field="o.company_id.phone"/>
                                                </p>
                                                <p t-if="o.company_id.email" style="margin: 0;">Email:
                                                    <span t-field="o.company_id.email"/>
                                                </p>
                                                <p t-if="o.company_id.website" style="margin: 0;">Website:
                                                    <span t-field="o.company_id.website"/>
                                                </p>
                                            </div>
                                        </div>
                                        <div class="col-4" style="tex-right"></div>
                                        <div class="col-2" style="tex-right; margin-top: 15px;">
                                            <p></p>
                                            <p></p>
                                            <p></p>
                                            <h3>
                                                <strong>Sale Order</strong>
                                            </h3>
                                        </div>
                                    </div>
                                </div>
                                <hr style="border-top: 1px solid #000; margin: 10px 0;"/>


                                <!-- Billing and Shipping Information -->
                                <div class="row">
                                    <div class="col-4">

                                        <strong>Bill To:</strong>

                                        <p style="margin: 0;">
                                            <span t-field="o.partner_id"/>
                                        </p>
                                        <p style="margin: 0;"><span t-field="o.partner_id.street"/>,
                                            <span t-field="o.partner_id.street2"/>
                                        </p>
                                        <p style="margin: 0;"><span t-field="o.partner_id.city"/>,
                                            <span t-field="o.partner_id.state_id"/>,
                                            <span t-field="o.partner_id.zip"/>
                                        </p>
                                        <p style="margin: 0;">
                                            <span t-field="o.partner_id.phone"/>
                                        </p>
                                        <p style="margin: 0;">
                                            <span t-field="o.partner_id.email"/>
                                        </p>
                                    </div>
                                    <div class="col-4"></div>
                                    <div class="col-4 text-right">

                                        <strong>Ship To:</strong>


                                        <p style="margin: 0;">
                                            <span t-field="o.partner_shipping_id"/>
                                        </p>
                                        <p style="margin: 0;"><span t-field="o.partner_shipping_id.street"/>,
                                            <span t-field="o.partner_shipping_id.street2"/>
                                        </p>
                                        <p style="margin: 0;"><span t-field="o.partner_shipping_id.city"/>,
                                            <span t-field="o.partner_shipping_id.state_id"/>,
                                            <span t-field="o.partner_shipping_id.zip"/>
                                        </p>
                                        <p style="margin: 0;">
                                            <span t-field="o.partner_shipping_id.phone"/>
                                        </p>
                                        <p style="margin: 0;">
                                            <span t-field="o.partner_shipping_id.email"/>
                                        </p>
                                    </div>
                                </div>
                                <table class="table table-sm mt-4"
                                       style="width: 100%;">
                                    <thead style="background-color: #f7f7f7;">
                                        <tr>
                                            <th><srtong> Shipping Terms</srtong></th>
                                            <th><srtong>Ship Method</srtong></th>
                                            <th><srtong>Carrier</srtong></th>
                                            <th><srtong>FOB</srtong></th>
                                            <th><srtong>Shipping Amt</srtong></th>
                                            <th><srtong>Shipping Tax</srtong></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-set="shipping"
                                           t-value="o.order_line.filtered(lambda rec: rec.product_id.type == 'service')"/>
                                        <t t-set="carrier" t-value="o.order_line"/>
                                        <tr>
                                            <td>
                                                <t t-esc="shipping.shipping_term"/>
                                            </td>
                                            <td>
                                                <t t-if="shipping">
                                                    <t t-esc="o.carrier_id.name"/>
                                                </t>
                                            </td>
                                            <td>
                                                <t t-if="shipping">
                                                    <t t-esc="shipping[0].carrier.name"/>
                                                </t>
                                            </td>
                                            <td>
                                                <t t-if="carrier">
                                                    <t t-esc="o.fob"/>
                                                </t>
                                            </td>
                                            <td class="text-right">
                                                <t t-esc="shipping.display_price"/>
                                            </td>
                                            <td class="text-right">
                                                <t t-esc="shipping.shipping_tax"/>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>

                                <!-- Cancel Date and Order Details Section -->
                                <table class="table table-sm mt-4"
                                       style="width: 100%;">
                                    <thead style="background-color: #f7f7f7;">
                                        <tr>
                                            <th><srtong> Cancel Date</srtong></th>
                                            <th><srtong>Order Date</srtong></th>
                                            <th><srtong>Customer</srtong></th>
                                            <th><srtong>Terms</srtong></th>
                                            <th><srtong>Customer PO</srtong></th>
                                            <th><srtong>Ref Number</srtong></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>
                                                <span t-field="o.cancel_date" t-options='{"widget": "date"}'/>
                                            </td>
                                            <td>
                                                <span t-field="o.date_order"/>
                                            </td>
                                            <td>
                                                <span t-field="o.partner_id.name"/>
                                            </td>
                                            <td>
                                                <span t-field="o.payment_term_id.name"/>
                                            </td>
                                            <td>
                                                <span t-field="o.customer_po"/>
                                            </td>
                                            <td>
                                                <span t-field="o.name"/>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>

                                <!-- Sales Order Details -->
                                <table class="table table-sm mt-4" style="width: 100%; margin-bottom:0px;">
                                    <thead style="background-color: #d3d3d3;">
                                        <tr>
                                            <th><srtong> Item No</srtong></th>
                                            <th><srtong>Description</srtong></th>
                                            <th><srtong>Qty</srtong></th>
                                            <th><srtong>UoM</srtong></th>
                                            <th><srtong>Unit Price</srtong></th>
                                            <th><srtong>Tax</srtong></th>
                                            <th><srtong>Total</srtong></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr t-foreach="o.order_line" t-as="line">
                                            <td>
                                                <span t-field="line.product_id.default_code"/>
                                            </td>
                                            <td>
                                                <span t-field="line.name"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="line.product_uom_qty"/>
                                            </td>
                                            <td>
                                                <span t-field="line.product_uom.name"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="line.price_unit"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-if="line.tax_id">
                                                    <span t-field="line.tax_id[0].name"/>
                                                </span>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="line.price_subtotal"/>
                                            </td>
                                        </tr>

                                    </tbody>
                                </table>
<!--                                <table class="table table-sm mt-1 table-borderless"-->
<!--                                       style="width: 100%; font-family: 'Times New Roman', Times, serif;">-->
<!--                                    <div class="row">-->
<!--                                        <div class="col-6"></div>-->
<!--                                        <div class="col-6" style="background-color: black; height: 2px;"></div>-->
<!--                                    </div>-->
<!--                                </table>-->
                                <table class="table table-sm mt-0 p-0" style="border: 1px solid black; margin-top:0px; border-collapse: collapse;">
                                    <!-- Total Section -->
                                    <tbody>
                                        <tr>
                                            <div class="row mt-4 p-2" style="border: 1px solid black; ">
                                                <div class="col-4">
                                                    <div>
                                                        <p><strong>Sales Rep:</strong>
                                                            <span t-field="o.user_id.name"/>
                                                        </p>
                                                        <strong><p>Memo:</p></strong>
                                                        <strong><p>Shipping Notes:</p></strong>
                                                        <p><strong>Ship Store:</strong>
                                                            <span t-field="o.warehouse_id.name"/>
                                                        </p>
                                                    </div>
                                                </div>
                                                <div class="col-4"></div>
                                                <div class="col-4 text-right mt-4">
                                                    <h6>
                                                        <strong>
                                                            <p>Subtotal:
                                                                <span style="float: right;">
                                                                    <span t-field="o.amount_untaxed"/>
                                                                </span>

                                                            </p>
                                                        </strong>
                                                    </h6>

                                                    <p></p>
                                                    <h6>
                                                        <strong>
                                                            <p>Taxes:
                                                                <span style="float: right;">
                                                                    <span t-field="o.amount_tax"/>
                                                                </span>
                                                            </p>
                                                        </strong>
                                                    </h6>
                                                </div>
                                            </div>
                                            <div class="row p-2" style="background-color: #d3d3d3;border: 1px solid black; ">
                                                <div class="col-4 "></div>
                                                <div class="col-4 "></div>
                                                <div class="col-4 text-right">
                                                     <h3>
                                                        <strong>
                                                            <p>Total:
                                                                <span style="float: right;">
                                                                    <span t-field="o.amount_total"/>
                                                                </span>
                                                            </p>
                                                        </strong>
                                                    </h3>
<!--                                                    <h3 style="background-color: #d3d3d3;">Total:-->
<!--                                                        <span t-field="o.amount_total"/>-->
<!--                                                    </h3>-->
                                                </div>
                                            </div>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </t>
                    </main>
                </t>
            </t>
        </template>
        <record id="paperformat_sale_custome_report" model="report.paperformat">
            <field name="name">A4 - statement</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">40</field>
            <field name="margin_bottom">32</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">40</field>
            <field name="dpi">90</field>
        </record>

        <record id="canmade_sale_order_report_action" model="ir.actions.report">
            <field name="name">Sales Order Report</field>
            <field name="model">sale.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">canmade_so_prints.canmade_sale_order_report_temp</field>
            <field name="report_file">canmade_so_prints.canmade_sale_order_report_temp</field>
            <field name="paperformat_id" ref="canmade_so_prints.paperformat_sale_custome_report"/>

        </record>
