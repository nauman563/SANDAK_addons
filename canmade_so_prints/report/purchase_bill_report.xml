<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="canmade_purchase_order_report_temp">
            <t t-call="web.html_container">
                <t t-call="web.basic_layout">
                    <style>

                        .custom-border-tr td, .custom-border-tr th {
                        border: 1px solid black; /* 1px black border for td and th within tr */
                        }

                        .custom-border-td {
                        border: 1px solid black; /* 1px black border for individual td */
                        }
                        /* Add font size rule */
                        body {
                        font-size: 10pt;
                        }
                    </style>
                    <main>
                        <t t-foreach="docs" t-as="o">

                            <div class="page" style="font-family: 'Times New Roman', Times, serif; color: #333;">

                                <!-- Company Logo and Address -->
                                <div class="header">
                                    <!-- Date and Time -->
                                    <div class="row">
                                        <div class="col-4 text-left" style="font-size: small;">
                                            <span t-esc="datetime.datetime.now().strftime('%d-%m-%Y %I:%M:%S %p')"/>
                                        </div>
                                        <div class="col-4 text-center" style="font-size: small;">
<!--                                            <span>Printed By:-->
<!--                                                <span t-esc="request.env.user.name"/>-->
<!--                                            </span>-->
                                        </div>
                                        <div class="col-4" style="position: relative;">
                                            <small style="position: absolute; right: 0; top: 0; font-size: small;">
                                                <span>Page</span>
                                                <span class="page"/>
                                                of
                                                <span class="topage"/>
                                            </small>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-2">
                                            <strong>
                                                <img t-if="o.company_id.logo"
                                                     t-att-src="image_data_uri(o.company_id.logo)"
                                                     style="max-height: 80px; max-width: 80%; margin-top: 15px;"
                                                     alt="Logo"/>
                                            </strong>
                                        </div>
                                        <div class="col-3 text-left"
                                             style="font-size: small;padding-left: 0; margin-left: 0; margin-right: 0;margin-top: 15px;margin-bottom: 0;">
                                            <!--                                        <strong t-field="o.company_id.name"/>-->
                                            <div>
                                                <p t-field="o.company_id.partner_id.contact_address"
                                                   style="margin: 0;"/>
                                            </div>
                                            <div>
                                                <p t-if="o.company_id.phone" style="margin: 0;">Phone:
                                                    <span t-field="o.company_id.phone"/>
                                                </p>
                                                <p t-if="o.company_id.email" style="margin: 0;">Email:
                                                    <span t-field="o.company_id.email"/>
                                                </p>
                                                <p t-if="o.company_id.website" style="margin: 0;">Website:
                                                    <span t-field="o.company_id.website"/>
                                                </p>
                                            </div>
                                        </div>
                                        <div class="col-5" style="tex-right"></div>
                                        <div class="col-2" style="tex-right; margin-top: 15px;">
                                            <p></p>
                                            <p></p>
                                            <p></p>
                                            <h3>
                                                <!--                                            <strong>Sale Order</strong>-->
                                            </h3>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-4"></div>
                                        <div class="col-4"></div>
                                        <div class="col-4" style="position: relative;">
                                            <small style="position: absolute; right: 0; top: 0; font-size: small;">
                                                <h3>
                                                    <span>Bill</span>
                                                </h3>
                                            </small>
                                        </div>
                                    </div>
                                </div>

                                <hr style="border-top: 1px solid #000; margin: 10px 0;"/>


                                <!-- Billing and Shipping Information -->
                                <table class="table table-sm mt-4">
                                    <div class="row">
                                        <tr style="font-size: small;">
                                            <td colspan="3">
                                                <strong>Vendor Detail:</strong>

                                                <p style="margin: 1;">
                                                    <span t-field="o.partner_id"/>
                                                </p>
                                                <p ><span t-field="o.partner_id.street"/>,
                                                    <span t-field="o.partner_id.street2"/>
                                                </p>
                                                <p ><span t-field="o.partner_id.city"/>,
                                                    <span t-field="o.partner_id.state_id"/>,
                                                    <span t-field="o.partner_id.zip"/>
                                                </p>
                                                <p >
                                                    <span t-field="o.partner_id.phone"/>
                                                </p>
                                                <p >
                                                    <span t-field="o.partner_id.email"/>
                                                </p>

                                            </td>
                                            <td colspan="3">
                                                <strong>Ship To:</strong>
                                                <p >
                                                    <span t-field="o.partner_id"/>
                                                </p>
                                                <p ><span t-field="o.partner_id.street"/>,
                                                    <span t-field="o.partner_id.street2"/>
                                                </p>
                                                <p ><span t-field="o.partner_id.city"/>,
                                                    <span t-field="o.partner_id.state_id"/>,
                                                    <span t-field="o.partner_id.zip"/>
                                                </p>
                                                <p >
                                                    <span t-field="o.partner_id.phone"/>
                                                </p>
                                                <p >
                                                    <span t-field="o.partner_id.email"/>
                                                </p>

                                            </td>
                                            <td colspan="3">
                                                <strong>Shiping:</strong>
                                                <p >Terms :
                                                    <span t-field="o.partner_id"
                                                          style="margin-left: 20px; text-align:right;"/>
                                                </p>
                                                <p >FOB :
                                                    <!--                                        <span t-field="o.company_id.email"/>-->
                                                </p>
                                                <p >Other Info :
                                                    <!--                                        <span t-field="o.company_id.website"/>-->
                                                </p>
                                                <p >Total Amt :
                                                    <!--                                        <span t-field="o.company_id.website"/>-->
                                                </p>
                                                <p >Amt Due :
                                                    <!--                                        <span t-field="o.company_id.website"/>-->
                                                </p>
                                                <p>Amt Paid :
                                                    <!--                                        <span t-field="o.company_id.website"/>-->
                                                </p>

                                            </td>
                                            <td colspan="3">
                                                <strong>Receipt Information:</strong>
                                                <p >Receipt:
                                                    <!--                                        <span t-field="o.company_id.phone"/>-->
                                                </p>
                                                <p >Received Date :
                                                                                            <span t-field="o.date_approve"/>
                                                </p>
                                                <p >Vendor :
                                                    <!--                                        <span t-field="o.company_id.website"/>-->
                                                </p>
                                                <p >Terms :
                                                    <!--                                        <span t-field="o.company_id.website"/>-->
                                                </p>
                                                <p >PO Number :
                                                    <!--                                        <span t-field="o.company_id.website"/>-->
                                                </p>
                                                <p >ASN Number :
                                                    <!--                                        <span t-field="o.company_id.website"/>-->
                                                </p>
                                                <p >Vendor Bill :
                                                    <!--                                        <span t-field="o.company_id.website"/>-->
                                                </p>
                                            </td>
                                        </tr>
                                    </div>
                                </table>

                                <!-- Sales Order Details -->
                                <table class="table table-sm mt-4" style="width: 100%;">
                                    <thead style="background-color: #d3d3d3;">
                                        <tr>
                                            <th>Item No</th>
                                            <th>Description</th>
                                            <th>Qty</th>
                                            <th>UoM</th>
                                            <th>Unit Price</th>
                                            <th>Ord Qty (PO)</th>
                                            <th>Rem Qty (PO)</th>
                                            <th>Tax</th>
                                            <th>Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr t-foreach="o.order_line" t-as="line">
                                            <td>
                                                <span t-field="line.product_id.default_code"/>
                                            </td>
                                            <td>
                                                <span t-field="line.name"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="line.product_uom_qty"/>
                                            </td>
                                            <td>
                                                <span t-field="line.product_uom.name"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="line.price_unit"/>
                                            </td>
                                            <td class="text-right">
                                                <!--                                            <span t-field="line.product_uom.name"/>-->
                                            </td>
                                            <td class="text-right">
                                                <!--                                            <span t-field="line.product_uom.name"/>-->
                                            </td>
                                            <td class="text-right">
                                                <span t-if="line.taxes_id">
                                                    <span t-field="line.taxes_id[0].name"/>
                                                </span>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="line.price_subtotal"/>
                                            </td>
                                        </tr>

                                    </tbody>
                                </table>
                                <table class="table table-sm mt-4" style="width: 100%;">
                                    <!-- Total Section -->
                                    <tbody>
                                        <tr>
                                            <div class="row mt-4">
                                                <div class="col-4">
                                                    <div>
                                                        <p>Created By :
                                                            <span t-field="request.env.user.name"/>
                                                        </p>
                                                        <p>Memo</p>
                                                        <p>Shipping Notes :</p>
                                                        <p>Exchange rate :
                                                            <span t-field="o.partner_id.name"/>
                                                        </p>
                                                    </div>
                                                </div>
                                                <div class="col-4"></div>
                                                <div class="col-4 text-right mt-4">
                                                    <strong>
                                                        <p>Sub total :
                                                            <span t-field="o.amount_untaxed"/>
                                                        </p>
                                                    </strong>
                                                    <p></p>
                                                    <p>Taxes :
                                                        <span t-field="o.amount_tax"/>
                                                    </p>
                                                </div>
                                            </div>
                                            <div class="row" style="background-color: #d3d3d3;">
                                                <div class="col-4 "></div>
                                                <div class="col-4 "></div>
                                                <div class="col-4 text-right">
                                                    <strong>
                                                        <h3 style="background-color: #d3d3d3;">Total :
                                                            <span t-field="o.amount_total"/>
                                                        </h3>
                                                    </strong>
                                                </div>
                                            </div>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </t>
                    </main>
                </t>
            </t>
        </template>
         <record id="paperformat_purchase_bill" model="report.paperformat">
            <field name="name">A4 - statement</field>
            <field name="default" eval="True" />
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">50</field>
            <field name="margin_bottom">32</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">40</field>
            <field name="dpi">90</field>
        </record>
        <record id="canmade_purchase_order_report_action" model="ir.actions.report">
            <field name="name">purchase Bill Report</field>
            <field name="model">purchase.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">canmade_so_prints.canmade_purchase_order_report_temp</field>
            <field name="report_file">canmade_so_prints.canmade_purchase_order_report_temp</field>
            <field name="paperformat_id" ref="canmade_so_prints.paperformat_purchase_bill"/>

        </record>

    </data>
</odoo>